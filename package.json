{
  "name": "khatm-api",
  "version": "1.0.0",
  "description": "Khatm API",
  "author": "Mohammed Islam",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "start": "node server",
    "dev": "npx nodemon",
    "pretest": "dropdb khatm-test ; createdb khatm-test && NODE_ENV=test npm run db-migrate && NODE_ENV=test npm run db-seed",
    "test": "NODE_ENV=test lab -a @hapi/code -L -I 'server,access,user' -v",
    "test-list": "lab -v -d",
    "lint": "eslint .",
    "dev-db-setup": "dropdb khatm-dev ; createdb khatm-dev && npm run db-migrate && npm run db-seed",
    "db-migrate": "npx knex migrate:latest",
    "db-seed": "npx knex seed:run"
  },
  "dependencies": {
    "@hapi/basic": "^5.1.1",
    "@hapi/boom": "^7.4.11",
    "@hapi/code": "6.x.x",
    "@hapi/eslint-config-hapi": "^12.3.0",
    "@hapi/eslint-plugin-hapi": "^4.3.5",
    "@hapi/glue": "^6.2.0",
    "@hapi/hapi": "^18.4.1",
    "@hapi/hoek": "^8.5.1",
    "@hapi/joi": "^15.1.1",
    "@hapi/lab": "^20.4.0",
    "avocat": "^1.1.0",
    "confidence": "4.x.x",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "google-auth-library": "^6.0.0",
    "haute-couture": "^3.5.0",
    "hpal": "^2.4.0",
    "hpal-debug": "^1.4.0",
    "knex": "0.19.x",
    "objection": "^1.6.11",
    "pg": "^7.18.2",
    "schmervice": "^1.5.0",
    "schwifty": "^4.4.0",
    "toys": "^2.3.1"
  }
}
