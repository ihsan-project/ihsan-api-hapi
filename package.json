{
  "name": "khatm-api",
  "version": "1.0.0",
  "description": "Khatm API",
  "author": "Mohammed Islam",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "start": "node server",
    "pretest": "dropdb khatm-test ; createdb khatm-test && NODE_ENV=test npm run db-migrate && NODE_ENV=test npm run db-seed",
    "test": "NODE_ENV=test lab -a @hapi/code -L -I 'server,access,user' -v",
    "test-list": "lab -v -d",
    "lint": "eslint .",
    "dev-db-setup": "dropdb khatm-dev ; createdb khatm-dev && npm run db-migrate && npm run db-seed",
    "db-migrate": "npx knex migrate:latest",
    "db-seed": "npx knex seed:run"
  },
  "dependencies": {
    "@hapi/basic": "^5.1.1",
    "@hapi/boom": "^7.4.3",
    "@hapi/code": "6.x.x",
    "@hapi/eslint-config-hapi": "^12.2.0",
    "@hapi/eslint-plugin-hapi": "^4.3.4",
    "@hapi/glue": "^6.1.1",
    "@hapi/hapi": "^18.3.2",
    "@hapi/hoek": "8.x.x",
    "@hapi/joi": "^15.1.1",
    "@hapi/lab": "20.x.x",
    "avocat": "^1.0.2",
    "confidence": "4.x.x",
    "dotenv": "^8.1.0",
    "eslint": "^6.3.0",
    "google-auth-library": "^6.0.0",
    "haute-couture": "3.x.x",
    "hpal": "^2.2.1",
    "hpal-debug": "1.x.x",
    "knex": "0.19.x",
    "objection": "1.x.x",
    "pg": "^7.12.1",
    "schmervice": "^1.2.0",
    "schwifty": "4.x.x",
    "toys": "2.x.x"
  }
}
