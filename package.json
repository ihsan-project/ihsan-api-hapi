{
  "name": "khatm-api",
  "version": "1.0.0",
  "description": "Khatm API",
  "author": "Mohammed Islam",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "start": "node server",
    "pretest": "createdb khatm-test && NODE_ENV=test npm run db-migrate && NODE_ENV=test npm run db-seed",
    "test": "NODE_ENV=test lab -a @hapi/code -L -I 'server,jwt,user' ; dropdb khatm-test",
    "lint": "eslint .",
    "dev-db-setup": "dropdb khatm-dev ; createdb khatm-dev && npm run db-migrate && npm run db-seed",
    "db-migrate": "npx knex migrate:latest",
    "db-seed": "npx knex seed:run"
  },
  "dependencies": {
    "@hapi/boom": "7.x.x",
    "@hapi/joi": "15.x.x",
    "hapi-auth-jwt2": "^8.6.2",
    "haute-couture": "3.x.x",
    "jsonwebtoken": "^8.5.1",
    "objection": "1.x.x",
    "pg": "^7.11.0",
    "schmervice": "^1.2.0",
    "schwifty": "4.x.x"
  },
  "peerDependencies": {
    "knex": "0.16.x"
  },
  "devDependencies": {
    "@hapi/code": "5.x.x",
    "@hapi/eslint-config-hapi": "12.x.x",
    "@hapi/eslint-plugin-hapi": "4.x.x",
    "@hapi/glue": "6.x.x",
    "@hapi/hapi": "18.x.x",
    "@hapi/hoek": "6.x.x",
    "@hapi/lab": "19.x.x",
    "confidence": "4.x.x",
    "dotenv": "8.x.x",
    "eslint": "5.x.x",
    "hpal": "^2.2.0",
    "hpal-debug": "1.x.x",
    "knex": "0.16.x",
    "sqlite3": "4.x.x",
    "toys": "2.x.x"
  }
}
